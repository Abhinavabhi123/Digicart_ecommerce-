<div class="bg-secondary m-0 col pt-lg-4 pb-4 mb-3 pe-2 ps-2" style="width: 100%; height: auto;">
  <h4 class="mb-3">Total orders</h4>
  <table id="userlist" class="table table-hover ">
      <thead>
          <tr>
          <th>No:</th>
          <th>User Id:</th>
          <th>User Name</th>
          <th>products</th>
          <th>Subtotal Amount</th>
          <th>Order Status</th>
          <th>Payment Method</th>
      </tr>
  </thead>
  <tbody>
      <% order.forEach((orders,i) => {%>
      <tr>
          <td><%=i+1 %></td>
          <td><%=orders._id %></td>
          <td><%=orders.address.fname%> <%=orders.address.lname%></td>
          <td>
            <% orders.products.forEach(element => {%>
              <%=element.product.name %> <br>
            <%}); %>
          </td>
          <td><%=orders.Subtotal%></td>
          <td><%=orders.orderStatus%></td>
          <td><%=orders.paymentMethod%></td>
      </tr>
      <%}); %>
  </tbody>
</table>


</div>
