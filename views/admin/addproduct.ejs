<%-include("../admin/layout/header.ejs")%>
<div class="col pt-4">
    <div class="pt-2 px-4 ps-lg-0 pe-xl-5">
        <h2 class="h4 pt-2 pb-4 mb-0 text-center text-sm-start border-bottom border-primary"><span class="badge bg-faded-accent fs-sm text-body align-middle ms-2"></span></h2>
        </div>
    <!-- Tabs-->
    <ul class="nav nav-tabs nav-justified" role="tablist">

         
      <li class="nav-item"><a class="nav-link px-0" href="#AddProducts" data-bs-toggle="tab" role="tab">
          <div class="d-none d-lg-block"><i class="ci-cloud-upload opacity-60 me-2"></i>Add Products</div>
          <div class="d-lg-none text-center"><i class="ci-bell opacity-60 d-block fs-xl mb-2"></i><span class="fs-ms">AddProducts</span></div></a></li>
      
    </ul>
    <div class="container-fluid col">
        <form action="/admin/addProduct" method="post" enctype="multipart/form-data">
        <div class="row ">
            <div class="col-sm-6">
              <label class="form-label" for="dashboard-fn">Product Name</label>
              <input class="form-control" name="productName" type="text" id="dashboard-fn" placeholder="Enter Product Name" required>
            </div>
            <div class="col-sm-6">
              <label class="form-label"  for="dashboard-ln">Description</label>
              <input class="form-control" name="proDescription" type="text" id="dashboard-ln" placeholder="Enter Description" required>
            </div>
            <div class="col-sm-6">
                <label class="form-label" for="dashboard-ln">Price</label>
                <input class="form-control" name="productPrice" type="text" id="dashboard-ln" placeholder="Enter Price" required>
              </div>
            <div class="col-sm-6">
              <label class="form-label" for="dashboard-profile-name">Stock</label>
              <input class="form-control" name="productStock" type="text" id="dashboard-profile-name" placeholder="Enter Stock details" required>
            </div>
            <div class="col-sm-6">
              <label class="form-label" for="dashboard-country">Category</label>
              <select name="proCategory" class="form-select form-control" id="dashboard-country"  required>
                <option value>Select Category</option>
                <%catdata.forEach(function(catdata,i) {%>
                  <option value="<%=catdata._id%>"><%= catdata.categoryName%></option>
                <%});%>
              </select> 
            </div>
            <div class="col-sm-6">
                <label class="form-label" for="dashboard-profile-name" >Image</label>
                <input class="form-control" name="proImage" multiple type="file" id="dashboard-profile-name" placeholder="Enter Stock details" required>
              </div>
           
            <div class="col-12">
              <hr class="mt-2 mb-4">
              <div class="d-sm-flex justify-content-end align-items-center">
                <button class="btn btn-primary mt-3 mt-sm-0" type="submit">Save changes</button>
              </div>
            </div>
          </div>
          <%if(typeof message !=="undefined"){%>
            <div class="alert alert-dismissible alert-warning mt-3">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <h4 class="alert-heading">! ! ! Oops..</h4>
                <p class="mb-0"><%=message%></p>
              </div>
          <%}%>
        </form>
    </div>

<%-include("../admin/layout/footer.ejs")%>
