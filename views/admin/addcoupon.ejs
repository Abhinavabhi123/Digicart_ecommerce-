<%-include('../admin/layout/header.ejs')%>
<div class="col pt-4">
    <div class="pt-2 px-4 ps-lg-0 pe-xl-5">
        <h2 class="h4 pt-2 pb-4 mb-0 text-center text-sm-start border-bottom border-primary"><span class="badge bg-faded-accent fs-sm text-body align-middle ms-2"></span></h2>
        </div>
    <!-- Tabs-->
    <ul class="nav nav-tabs nav-justified" role="tablist">
 
      <li class="nav-item"><a class="nav-link px-0" href="#AddProducts" data-bs-toggle="tab" role="tab">
          <div class="d-none d-lg-block"><i class="ci-cloud-upload opacity-60 me-2"></i>Add Coupon</div>
          <div class="d-lg-none text-center"><i class="ci-bell opacity-60 d-block fs-xl mb-2"></i><span class="fs-ms">Add Coupon</span></div></a></li>
      
    </ul>
    <div class="container-fluid col">
        <form action="/admin/submitCoupon" method="post">
            <%if(typeof message !== "undefined"){ %>
                <div class="alert alert-dismissible alert-danger">
                    <strong>OOOH !</strong>    <%=message%>
                  </div>
              <% } %>
            
           <div class="containrer "  style="width: 40vw;">
                <div class="form-group">
                    <label class="form-label mt-4">Enter coupon details</label>
                    <div class="form-floating mb-3">
                             <input type="text" class="form-control" name="couponcode" id="floatingInput" placeholder="Enter couponcode" required>
                            <label for="floatingInput">Coupon Code</label>
                    </div>
                    <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingPassword" name="available"  placeholder="Available Coupons" required>
                            <label for="floatingPassword">Coupon Availability</label>
                    </div>
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="minAmount" placeholder="Enter Minimum Amount" id="floatingPassword" required>
                        <label for="floatingPassword">Minimum Amount</label>
                    </div>
                   
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="amount" placeholder="Enter Discount Amount" id="floatingPassword" required>
                        <label for="floatingPassword">Discount Amount</label>
                    </div>
                    <div>
                        <input type="date" class="form-control" name="expiryDate" placeholder="select expiry date"  required>
                    </div>
                    <div class="col-sm-6">
                        <label class="form-label" for="dashboard-country">Status</label>
                        <select name="couponstatus" class="form-select form-control" id="dashboard-country"  required>
                          <option value>Select Status</option>
                            <option value="Active">Active</option>
                            <option value="disabled">Disabled</option>
                        </select>
                      </div>
                </div>
                </div>
                 <div class="col-12">
                     <hr class="mt-2 mb-4">
                    
                         <div class="d-sm-flex justify-content-end align-items-center">
                            <button class="btn btn-primary mt-3 mt-sm-0" type="submit">Save changes</button>
                        </div>
                </div>
          </div>
          
        </form>
    </div>
   
<%-include('../admin/layout/footer.ejs')%>