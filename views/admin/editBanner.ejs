<%-include("../admin/layout/header.ejs")%>

<div class="col pt-4">
    <div class="pt-2 px-4 ps-lg-0 pe-xl-5">
        <h2 class="h4 pt-2 pb-4 mb-0 text-center text-sm-start border-bottom border-primary"><span class="badge bg-faded-accent fs-sm text-body align-middle ms-2"></span></h2>
        </div>
    <!-- Tabs-->
    <ul class="nav nav-tabs nav-justified" role="tablist">

         
      <li class="nav-item"><a class="nav-link px-0" href="#AddProducts" data-bs-toggle="tab" role="tab">
          <div class="d-none d-lg-block"><i class="ci-cloud-upload opacity-60 me-2"></i>Add Banner</div>
          <div class="d-lg-none text-center"><i class="ci-bell opacity-60 d-block fs-xl mb-2"></i><span class="fs-ms">Add Banner</span></div></a></li>
      
    </ul>
    <div class="container-fluid col">
        <form action="/admin/applyEditBanner?id=<%=bannerdata._id%>" method="post" enctype="multipart/form-data">
       
            
           <div class="containrer "  style="width: 50vw;">
                <div class="form-group">
                    <div class="form-floating mb-3">
                             <input type="text" class="form-control" name="editBannerTitle" id="floatingInput" value="<%=bannerdata.title%>" placeholder="Banner Title" required>
                            <label for="floatingInput">Banner Title</label>
                    </div>
                    <div class="form-floating mb-3">
                            <input type="text" class="form-control" id="floatingdescription" name="editBannerDesc" value="<%=bannerdata.description%>" placeholder="Description" required>
                            <label for="floatingPassword">Description </label>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <img src="/Image/<%=bannerdata.image%>" style="width: 150px; height: auto;padding-bottom: 1.8rem;" id="banImage">
                        <label class="form-label" for="dashboard-profile-name" >Image</label>
                        <input class="form-control" name="editBannerImage" multiple type="file" id="dashboard-profile-name"  required>
                    </div>
                    <div class="col-sm-6 mb-3">
                        <label class="form-label" for="dashboard-country">Category</label>
                        <select name="bannerStatus"  class="form-select form-control" id="dashboard-country"  required>
                          <option value>Select Banner Status</option>
                            <option value="false">Activate</option>
                            <option value="true">Deactivate</option>
                         
                        </select> 
                      </div>
                   
                    <div class="form-floating mb-3">
                        <input type="text" class="form-control" name="editUrlname" placeholder="URL" value=" <%=bannerdata.url%>" id="floatingUrl" required>
                        <label for="floatingPassword">URL</label>
                    </div>
                </div>
                </div>
                 <div class="col-12">
                     <hr class="mt-2 mb-4">
                     
                         <div class="d-sm-flex justify-content-end align-items-center">
                            <button class="btn btn-primary mt-3 mt-sm-0" type="submit">Save changes</button>
                        </div>
                </div>
          </div>
        </form>
    </div>

    <script>
        function viewImage(event){
          document.getElementById("banImage").src=URL.createObjectURL(event.target.files[0])
        }
    </script>

<%-include("../admin/layout/footer.ejs")%>
