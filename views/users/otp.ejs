                <form action="/checkOtp" method="post">
                  <div class="form-outline flex-fill mt-3">
                    <input name="otp" type="text" id="form3Example5cd" class="form-control" placeholder="Enter your OTP Here" />
                  </div>
                  <div class="d-flex flex-column mt-5">
                   
                
                    <button class="mt-2 btn btn-dark" type="submit">Submit</button>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div> 
