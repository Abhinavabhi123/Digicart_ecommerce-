<div style="width: 100vw;background-size: cover; height: 100vh;background-repeat: no-repeat; background-image: url(https://imgs.search.brave.com/ANEfkTHZ1JrdzLLGbnEt9jQWmdxdTjdPxMzRVrfc6Ok/rs:fit:1200:1080:1/g:ce/aHR0cHM6Ly9jZG4u/d2FsbHBhcGVyc2Fm/YXJpLmNvbS82NC8x/MS9ZVDhTRm4uanBn);">
<div class="container-fluid" style="width: 100vw; height: 100vh; display: flex;align-items: center ;background-repeat: no-repeat; ">
<div class="container py-4 py-lg-5 my-4 align-items-center justify-content-center" >
    <div class="row d-flex align-items-center justify-content-center">
      <div class="col-md-6">
        <div class="card border-0 shadow">
          <div class="card-body" style="background-color: transparent; ">
            <h2 class="h4 mb-1">Sign in</h2>

            <hr>

            <!-- todo: novalidate -->
            <% if(typeof errorMessage !== "undefined") {%>
              <div id="messageDiv" class="alert alert-dismissible alert-warning" style="height: 3rem;">
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                <p class="alert-heading">Warning! <%=errorMessage %></p>
                
              </div>
            <% } %>
            <form class="needs-validation" action="/signin" method="post" novalidate>
             
              <label for="usermail"> Enter Your Valid Email</label>
              <div class="input-group mb-3"><i class="ci-mail position-absolute top-50 translate-middle-y text-muted fs-base ms-3"></i>
               
                <input class="form-control rounded-start" type="email" placeholder="Email" name="email" required>
              </div>
              <label for="usermail"> Enter The Password</label>
              <div class="input-group mb-3"><i class="ci-locked position-absolute top-50 translate-middle-y text-muted fs-base ms-3"></i>
                <div class="password-toggle w-100">
               
                  <input class="form-control" type="password" name="password" placeholder="Password" required>

                </div>
              </div>

              <hr class="mt-4">
              <div class="text-end pt-4">
                <div class="alert p-0 m-0 " style="width: 36vw;">
                <% if(typeof message !=="undefined"){%>
                <div id="loginMessage" class=" d-flex align-items-center alert alert-dismissible alert-danger" role="alert">
                    <%= message %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
                <%}%>
              </div>
                <a href="/signup"><button type="button" class="btn btn-outline-secondary">Go to Signup</button></a>
                <button class="btn btn-primary" type="submit"><i class="ci-sign-in me-2 ms-n21"></i>Sign In</button>
              </div>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
